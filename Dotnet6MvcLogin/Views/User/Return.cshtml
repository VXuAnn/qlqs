@model MvcLogin.Models.Combinecs
@using Dotnet6MvcLogin.Models.DTO;
@using Dotnet6MvcLogin.Repositories.Abstract;
@using Microsoft.AspNetCore.Authorization;
@using Microsoft.AspNetCore.Mvc;

@using MvcLogin.Models;






<body>
    @if (TempData["success"] != null)
    {
        <div class="alert alert-success">@TempData["success"]</div>
    }

    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger">@TempData["error"]</div>
    }
    <div class="contact-container">
       
        <form asp-action="ReturnNew" class="contact-left">
            @* <input type="text" name="IDdv" placeholder="IDdv" class="contact-inputs" required>
            <input type="email" name="Ngay" placeholder="Ngay" class="contact-inputs" required>
            <input type="text" name="Tổng quân số" placeholder="Tổng quân số" class="contact-inputs" required>
            <input type="email" name="Quân số vắng" placeholder="Quân số vắng" class="contact-inputs" required>
            <input type="text" name="Đào ngũ" placeholder="Đào ngũ" class="contact-inputs" required>
            <input type="email" name="Đi viện" placeholder="Đi viện" class="contact-inputs" required>
            <input type="text" name="Đi bệnh xá" placeholder="Đi bệnh xá" class="contact-inputs" required>
            <input type="text" name="Đi học" placeholder="Đi học" class="contact-inputs" required>
            <input type="email" name="Đi thực tê" placeholder="Đi thực tê" class="contact-inputs" required>
            <input type="text" name="Thực tập" placeholder="Thực tập" class="contact-inputs" required>
            <input type="email" name="Đi tranh thủ" placeholder="Đi tranh thủ" class="contact-inputs" required>
            <input type="text" name="Đi công tác" placeholder="Đi công tác" class="contact-inputs" required>
            <input type="email" name="Thai sản" placeholder="Thai sản" class="contact-inputs" required>
            <input type="text" name="Lý do khác" placeholder="Lý do khác" class="contact-inputs" required>
            <input type="email" name="Chú thích" placeholder="Chú thích" class="contact-inputs" required> *@
            <div class="grid-container">
                <div class="grid-column">
                    <input asp-for="QuanSoModel.IdDv" type="text" name="IDdv" placeholder="IDdv" class="contact-inputs" value="@User.Identity.Name" readonly />
                     <input asp-for="QuanSoModel.Ngay" type="text" name="Ngay" placeholder="Ngay" class="contact-inputs">
                    <input asp-for="QuanSoModel.TongQs" type="text" name="TongQs" placeholder="Tổng quân số" class="contact-inputs">
                    <input asp-for="QuanSoModel.QsVang" type="text" name="QsVang" placeholder="Quân số vắng" class="contact-inputs">
                    <input asp-for="QuanSoModel.DaoNgu" type="text" name="DaoNgu" placeholder="Đào ngũ" class="contact-inputs">
                    <input asp-for="QuanSoModel.DiVien" type="text" name="DiVien" placeholder="Đi viện" class="contact-inputs">
                    <input asp-for="QuanSoModel.BenhXa" type="text" name="BenhXa" placeholder="Đi bệnh xá" class="contact-inputs">
                    <input asp-for="QuanSoModel.ChuThich" type="message" name="ChuThich" placeholder="Chú thích" class="contact-inputs">

                </div>
                <div class="grid-column">
                    <input asp-for="QuanSoModel.DiHoc" type="text" name="DiHoc" placeholder="Đi học" class="contact-inputs">
                    <input asp-for="QuanSoModel.DiThucTe" type="text" name="DiThucTe" placeholder="Đi thực tế" class="contact-inputs">
                    <input asp-for="QuanSoModel.DiThucTap" type="text" name="DiThucTap" placeholder="Thực tập" class="contact-inputs">
                    <input asp-for="QuanSoModel.DiTt" type="text" name="DiTt" placeholder="Đi tranh thủ" class="contact-inputs">
                    <input asp-for="QuanSoModel.DiCtac" type="text" name="DiCtac" placeholder="Đi công tác" class="contact-inputs">
                    <input asp-for="QuanSoModel.ThaiSan" type="text" name="ThaiSan" placeholder="Thai sản" class="contact-inputs">
                    <input asp-for="QuanSoModel.LyDoKhac" type="text" name="LyDoKhac" placeholder="Lý do khác" class="contact-inputs">
                </div>
                <div class="grid-column">
                    <input asp-for="THDVModel.IdDv" value="@User.Identity.Name" hidden />
                    @* <input asp-for="THDVModel.IdDv" type="text" name="IDdv" placeholder="IDdv" class="contact-inputs" value="@User.Identity.Name" readonly /> *@
                     <input asp-for="THDVModel.Ngay" type="text" name="Ngay" placeholder="Ngay" class="contact-inputs">
                    <input asp-for="THDVModel.TenTB" type="text" name="TenTB" placeholder="Tên trực ban" class="contact-inputs">
                    @if (TempData["errorTB"] != null)
                    {
                        <div class="alert alert-danger">@TempData["error"]</div>
                    }
                    <input asp-for="THDVModel.Nvvs" type="text" name="Nvvs" placeholder="Nội vụ vệ sinh" class="contact-inputs">
                    <input asp-for="THDVModel.CanhGac" type="text" name="CanhGac" placeholder="Canh gác" class="contact-inputs">
                    <input asp-for="THDVModel.GhiChu" type="text" name="GhiChu" placeholder="Ghi chú" class="contact-inputs">

                </div>
            </div>

           
            <button type="submit">Sửa </button>

        </form>
    </div>
</body>


