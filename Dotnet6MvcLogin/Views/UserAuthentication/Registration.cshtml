@model Dotnet6MvcLogin.Models.DTO.RegistrationModel
@{
    Layout = null;
}
<link rel="stylesheet" href="~/css/style.css">
<link href="/css/bootstrap.min.css" rel="stylesheet" />
@Html.ValidationSummary()
<div class="container">
    <div class="row">
        <div class="col-md-6 center-block">
            <div class="row align-items-center">
                <!-- Thêm hàng mới -->
                <div class="col-auto">
                    <!-- Chia cột -->
                    <a href="/Admin/Index" class="logo-container">
                        <img src="/images/Logo_MTA.png" alt="Logo" class="logo" style="width: 100px; height: 100px;>
                    </a>
                </div>
                <div class="col">
                    <!-- Chia cột -->
                </div>
            </div>

            <form asp-action="Registration" method="post">

                <div class="form-group">
                    <label>Họ</label>
                    <input type="text" class="form-control" asp-for="FirstName" />
                    <span class="text-danger" asp-validation-for="FirstName"></span>
                </div>

                <div class="form-group">
                    <label>Tên</label>
                    <input type="text" class="form-control" asp-for="LastName" />
                    <span class="text-danger" asp-validation-for="LastName"></span>
                </div>

                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" asp-for="Email" />
                    <span class="text-danger" asp-validation-for="Email"></span>

                </div>

                <div class="form-group">
                    <label>Tên tài khoản</label>
                    <input type="text" class="form-control" asp-for="Username" />
                    <span class="text-danger" asp-validation-for="Username"></span>

                </div>

                <div class="form-group">
                    <label>Mật khẩu (Ví dụ: VuAn@123)</label>
                    <input type="password" class="form-control" asp-for="Password" />
                    <span class="text-danger" asp-validation-for="Password"></span>

                </div>

                <div class="form-group">
                    <label>Xác nhận lại mật khẩu</label>
                    <input type="password" class="form-control" asp-for="PasswordConfirm" />
                    <span class="text-danger" asp-validation-for="PasswordConfirm"></span>

                </div>



                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        <span class="text-info">@TempData["msg"]</span>
                    </div>
                }

                <button type="submit" class="btn btn-info">Tạo</button>
                <a class="btn btn-primary" href="/UserAuthentication/Login">Đăng nhập</a>
            </form>
        </div>
    </div>
</div>
